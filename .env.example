# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,goexplorer.in,goexplorer-dev.cloud

# Database (DEV) - prefer explicit DB_* vars in development (do NOT commit secrets)
# Example explicit DB_* vars (DEV only)
DB_NAME=goexplorer_dev
DB_USER=goexplorer_dev_user
DB_PASSWORD=StrongTempPassword@123
DB_HOST=localhost
DB_PORT=5432

# Alternatively, you can use DATABASE_URL (use only in dev or CI if preferred)
# DATABASE_URL=postgresql://user:password@localhost:5432/goexplorer_dev
# Default fallback (sqlite) used if no DB vars set
DATABASE_URL=sqlite:///db.sqlite3

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe (Alternative)
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Email Settings (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
DEFAULT_FROM_EMAIL=noreply@goexplorer.in

# SMS Settings (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# AWS S3 (for production media files)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=goexplorer-media
AWS_S3_REGION_NAME=ap-south-1

# Domain
DOMAIN=goexplorer.in
